<% layout("/layouts/boilerplate") -%>
<body>
    
    
    <form method="post" action="/listing">

     <div class="row form-body">
       <div class="col-8">
        <h2>Create new List</h2>
        <div>
            <lable for="title" class="form-lable">Title</lable>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control mb-3">
        </div>
        <div>
            <lable for="Description" class="form-lable">Description</lable>
           <textarea name="listing[description]" class="form-control mb-3">enter the description</textarea>
        </div>
        <div>
            <lable for="image" class="form-lable">Image URL</lable>
            <input type="text" name="listing[image]" placeholder="image url" class="form-control mb-3">
        </div>
        
        <div class="row">
            <div class="col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input  name="listing[price]" placeholder="enter price" class="form-control mb-3">
        </div>
        <div class="col-md-8">
            <lable for="country" class="form-lable">Country</lable>
            <input type="text" name="listing[country]" placeholder="enter country" class="form-control mb-3">
        </div>
        </div>

        <div>
            <lable for="location" class="form-lable">Location</lable>
            <input type="text" name="listing[location]" placeholder="location" class="form-control mb-3">
        </div>

        <button class="btn btn-dark form-btn ">Add</button>
    </form>
       </div> 
     </div>  
        
</body>